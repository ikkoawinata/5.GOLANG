package main

import (
	"fmt"
)

func judul() {
	fmt.Println("================================================================================")
	fmt.Println("       S E L A M A T   D A T A N G   D I   P R O G R A M ")
	fmt.Println("                  CONVERT SATUAN BERAT ")
	fmt.Println("                B A H A S A    G O L A N G")
	fmt.Println("==================================================================================")
}

func table() {
	fmt.Println("================================================================================")
	fmt.Println("NO |                 SATUAN PANJANG               ")
	fmt.Println("================================================================================")
	fmt.Println("1.  | KG (kilogram)       ->   HG (Hektogram)                                 |")
	fmt.Println("2.  | KG (kilogram)       ->   DAG (Dekagram)                                 |")
	fmt.Println("3.  | KG (kilogram)       ->   G (Gram)                                       |")
	fmt.Println("4.  | KG (kilogram)       ->   DG (Desigram)                                  |")
	fmt.Println("5.  | KG (kilogram)       ->   CG (Centigram)                                 |")
	fmt.Println("6.  | KG (kilogram)       ->   MG (Miligram)                                  |")
	fmt.Println("7.  | HG (Hektogram)      ->   KG (kilogram)                                  |")
	fmt.Println("8.  | HG (Hektogram)      ->   DAG (Dekagram)                                 |")
	fmt.Println("9.  | HG (Hektogram)      ->   G (Gram)                                       |")
	fmt.Println("10. | HG (Hektogram)      ->   DG (Desigram)                                  |")
	fmt.Println("11. | HG (Hektogram)      ->   CG (Centigram)                                 |")
	fmt.Println("12. | HG (Hektogram)      ->   MG (Miligram)                                  |")
	fmt.Println("13. | DAG (Dekagram)      ->   KG (kilogram)                                  |")
	fmt.Println("14. | DAG (Dekagram)      ->   HG (Hektogram)                                 |")
	fmt.Println("15. | DAG (Dekagram)      ->   G (Gram)                                       |")
	fmt.Println("16. | DAG (Dekagram)      ->   DG (Desigram)                                  |")
	fmt.Println("17. | DAG (Dekagram)      ->   CG (Centigram)                                 |")
	fmt.Println("18. | DAG (Dekagram)      ->   MG (Miligram)                                  |")
	fmt.Println("19. | G (Gram)            ->   KG (kilogram)                                  |")
	fmt.Println("20. | G (Gram)            ->   HG (Hektogram)                                 |")
	fmt.Println("21. | G (Gram)            ->   DAG (Dekagram)                                 |")
	fmt.Println("22. | G (Gram)            ->   DG (Desigram)                                  |")
	fmt.Println("23. | G (Gram)            ->   CG (Centigram)                                 |")
	fmt.Println("24. | G (Gram)            ->   MG (Miligram)                                  |")
	fmt.Println("25. | DG (Desigram)       ->   KG (kilogram)                                  |")
	fmt.Println("26. | DG (Desigram)       ->   HG (Hektogram)                                 |")
	fmt.Println("27. | DG (Desigram)       ->   DAG (Dekagram)                                 |")
	fmt.Println("28. | DG (Desigram)       ->   G (Gram)                                       |")
	fmt.Println("29. | DG (Desigram)       ->   CG (Centigram)                                 |")
	fmt.Println("30. | DG (Desigram)       ->   MG (Miligram)                                  |")
	fmt.Println("31. | CG (Centigram)      ->   KG (kilogram)                                  |")
	fmt.Println("32. | CG (Centigram)      ->   HG (Hektogram)                                 |")
	fmt.Println("33. | CG (Centigram)      ->   DAG (Dekagram)                                 |")
	fmt.Println("34. | CG (Centigram)      ->   G (Gram)                                       |")
	fmt.Println("35. | CG (Centigram)      ->   DG (Desigram)                                  |")
	fmt.Println("36. | CG (Centigram)      ->   MG (Miligram)                                  |")
	fmt.Println("37. | MG (Miligram)       ->   KG (kilogram)                                  |")
	fmt.Println("38. | MG (Miligram)       ->   HG (Hektogram)                                 |")
	fmt.Println("39. | MG (Miligram)       ->   DAG (Dekagram)                                 |")
	fmt.Println("40. | MG (Miligram)       ->   G (Gram)                                       |")
	fmt.Println("41. | MG (Miligram)       ->   DG (Desigram)                                  |")
	fmt.Println("42. | MG (Miligram)       ->   CG (Centigram)                                 |")
	fmt.Println("================================================================================")
}

func Gain() {
