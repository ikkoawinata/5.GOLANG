package main

import (
	"fmt"
)

func judul() {
	fmt.Println("================================================================================")
	fmt.Println("       S E L A M A T   D A T A N G   D I   P R O G R A M ")
	fmt.Println("                  CONVERT SATUAN PANJANG ")
	fmt.Println("                B A H A S A    G O L A N G")
	fmt.Println("==================================================================================")
}

func table() {
	fmt.Println("================================================================================")
	fmt.Println("NO |                 SATUAN PANJANG               ")
	fmt.Println("================================================================================")
	fmt.Println("1.  | KM (Kilometer)       ->   HM (Hektometer)                                 |")
	fmt.Println("2.  | KM (Kilometer)       ->   DAM (Dekameter)                                 |")
	fmt.Println("3.  | KM (Kilometer)       ->   M (Meter)                                       |")
	fmt.Println("4.  | KM (Kilometer)       ->   DM (Desimeter)                                  |")
	fmt.Println("5.  | KM (Kilometer)       ->   CM (Centimeter)                                 |")
	fmt.Println("6.  | KM (Kilometer)       ->   MM (Milimeter)                                  |")
	fmt.Println("7.  | HM (Hektometer)      ->   KM (Kilometer)                                  |")
	fmt.Println("8.  | HM (Hektometer)      ->   DAM (Dekameter)                                 |")
	fmt.Println("9.  | HM (Hektometer)      ->   M (Meter)                                       |")
	fmt.Println("10. | HM (Hektometer)      ->   DM (Desimeter)                                  |")
	fmt.Println("11. | HM (Hektometer)      ->   CM (Centimeter)                                 |")
	fmt.Println("12. | HM (Hektometer)      ->   MM (Milimeter)                                  |")
	fmt.Println("13. | DAM (Dekameter)      ->   KM (Kilometer)                                  |")
	fmt.Println("14. | DAM (Dekameter)      ->   HM (Hektometer)                                 |")
	fmt.Println("15. | DAM (Dekameter)      ->   M (Meter)                                       |")
	fmt.Println("16. | DAM (Dekameter)      ->   DM (Desimeter)                                  |")
	fmt.Println("17. | DAM (Dekameter)      ->   CM (Centimeter)                                 |")
	fmt.Println("18. | DAM (Dekameter)      ->   MM (Milimeter)                                  |")
	fmt.Println("19. | M (Meter)            ->   KM (Kilometer)                                  |")
	fmt.Println("20. | M (Meter)            ->   HM (Hektometer)                                 |")
	fmt.Println("21. | M (Meter)            ->   DAM (Dekameter)                                 |")
	fmt.Println("22. | M (Meter)            ->   DM (Desimeter)                                  |")
	fmt.Println("23. | M (Meter)            ->   CM (Centimeter)                                 |")
	fmt.Println("24. | M (Meter)            ->   MM (Milieter)                                   |")
	fmt.Println("25. | DM (Desimeter)       ->   KM (Kilometer)                                  |")
	fmt.Println("26. | DM (Desimeter)       ->   HM (Hektometer)                                 |")
	fmt.Println("27. | DM (Desimeter)       ->   DAM (Dekameter)                                 |")
	fmt.Println("28. | DM (Desimeter)       ->   M (Meter)                                       |")
	fmt.Println("29. | DM (Desimeter)       ->   CM (Centimeter)                                 |")
	fmt.Println("30. | DM (Desimeter)       ->   MM (Milimeter)                                  |")
	fmt.Println("31. | CM (Centimeter)      ->   KM (Kilometer)                                  |")
	fmt.Println("32. | CM (Centimeter)      ->   HM (Hektometer)                                 |")
	fmt.Println("33. | CM (Centimeter)      ->   DAM (Dekameter)                                 |")
	fmt.Println("34. | CM (Centimeter)      ->   M (Meter)                                       |")
	fmt.Println("35. | CM (Centimeter)      ->   DM (Desimeter)                                  |")
	fmt.Println("36. | CM (Centimeter)      ->   MM (Milimeter)                                  |")
	fmt.Println("37. | MM (Milimeter)       ->   KM (Kilometer)                                  |")
	fmt.Println("38. | MM (Milimeter)       ->   HM (Hektometer)                                 |")
	fmt.Println("39. | MM (Milimeter)       ->   DAM (Dekameter)                                 |")
	fmt.Println("40. | MM (Milimeter)       ->   M (Meter)                                       |")
	fmt.Println("41. | MM (Milimeter)       ->   DM (Desimeter)                                  |")
	fmt.Println("42. | MM (Milimeter)       ->   CM (Centimeter)                                 |")
	fmt.Println("================================================================================")
}

func main() {
